issn = {0022-1767},
journal = {The Journal of Immunology},
month = {oct},
number = {8},
pages = {4300--4309},
pmid = {21918193},
title = {{Constitutive and Inflammation-Dependent Antimicrobial Peptides Produced by Epithelium Are Differentially Processed and Inactivated by the Commensal {\textless}i{\textgreater}Finegoldia magna{\textless}/i{\textgreater} and the Pathogen {\textless}i{\textgreater}Streptococcus pyogenes{\textless}/i{\textgreater}}},
