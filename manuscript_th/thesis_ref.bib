publisher = {NIH Public Access},
title = {{Expression cloning and periplasmic orientation of the Francisella novicida lipid A 4'-phosphatase LpxF.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/16467300},
volume = {281},
year = {2006}
}
