title = {{Rational Design of $\alpha$-Helical Antimicrobial Peptides to Target Gram-negative Pathogens, Acinetobacter baumannii and Pseudomonas aeruginosa: Utilization of Charge, ‘Specificity Determinants,' Total Hydrophobicity, Hydrophobe Type and Location as Design Para}},
url = {http://doi.wiley.com/10.1111/j.1747-0285.2011.01086.x},
