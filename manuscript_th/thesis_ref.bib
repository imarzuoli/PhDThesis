pmid = {19047754},
title = {{Capsule polysaccharide is a bacterial decoy for antimicrobial peptides}},
url = {http://mic.microbiologyresearch.org/content/journal/micro/10.1099/mic.0.2008/022301-0},
volume = {154},
year = {2008}
